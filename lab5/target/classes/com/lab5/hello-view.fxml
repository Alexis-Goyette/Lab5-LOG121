<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="TOP_LEFT" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lab5.ControleurImg">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <MenuButton fx:id="mbFichier" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-arrow: transparent;" text="Fichier">
            <items>
                <MenuItem fx:id="miSauvergarderPerspective" text="Sauvegarder perspective" />
                <MenuItem fx:id="miCP" onAction="#initialize" text="Charger perspective" />
                <MenuItem fx:id="miCI" text="Charger image" />
                <MenuItem fx:id="miQ" text="Quitter" />
            </items>
        </MenuButton>
        <MenuButton fx:id="mbEdition" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-arrow: transparent;" text="Edition" GridPane.columnIndex="1">
            <items>
                <MenuItem fx:id="miD" text="Défaire" />
                <MenuItem fx:id="miR" text="Refaire" />
            </items>
        </MenuButton>
        <MenuButton fx:id="mbPP" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-arrow: transparent;" text="Presse-Papier" GridPane.columnIndex="2">
            <items>
                <MenuItem fx:id="miCS" text="Choisir stratégie" />
            </items>
        </MenuButton>
    </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
