<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.MenuButton?>
<GridPane alignment="TOP_LEFT" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <children>
        <MenuButton text="Fichier" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-arrow: transparent;">
            <items>
                <MenuItem text="Sauvegarder perspective" />
                <MenuItem text="Charger perspective" />
                <MenuItem text="Charger image" />
                <MenuItem text="Quitter" />
            </items>
        </MenuButton>
        <MenuButton text="Edition" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-arrow: transparent;" GridPane.columnIndex="1">
            <items>
                <MenuItem text="Défaire" />
                <MenuItem text="Refaire" />
            </items>
        </MenuButton>
        <MenuButton text="Presse-Papier" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-arrow: transparent;" GridPane.columnIndex="2">
            <items>
                <MenuItem text="Choisir stratégie" />
            </items>
        </MenuButton>
    </children>
</GridPane>
